<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table border="1px">
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Titulo</th>
      <th>Anio</th>
      <th>Resumen</th>
      <th>Editorial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.titulo %></td>
        <td><%= book.anio %></td>
        <td><%= book.resumen %></td>
        <!--td><%= book.editorial_id %></td-->
        <td><%= book.editorial.nombre %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

